{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "linux": {
                "command": "sh",
                "args": [
                    "-c",
                    "mkdir -p build && cd build && cmake -DCMAKE_BUILD_TYPE=Debug .. && make"
                ],
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}